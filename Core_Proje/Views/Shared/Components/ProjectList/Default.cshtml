@using EntityLayer.Concrete
@model List<Portfolio>

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Proje Listesi</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th style="color:white">#</th>
                                <th style="color:white"> Ana Görsel</th>
                                <th style="color:white"> Proje Adı </th>
                                <th style="color:white"> URL </th>
                                <th style="color:white"> Fiyat </th>
                                <th style="color:white">Tamamlanma</th>
                                <th style="color:white"> Durum </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.PortfolioID</td>
                                    <td><img src="@item.ImageUrl" /></td>
                                    <td>@item.Name</td>
                                    <td><a style="color:slateblue" href="@item.ProjectUrl">Proje Url</a></td>
                                    <td>@item.Price</td>
                                    <td>@item.Value</td>
                                    <td>
                                        <a href="/Portfolio/EditPortfolio/@item.PortfolioID/">
                                            <div class="badge badge-outline-success">Detayları Gör</div>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>